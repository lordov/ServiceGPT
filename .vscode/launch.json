{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "jinja": true
        }
    ]
}